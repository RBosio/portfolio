---
import Button from "./Button.astro";

const { title, image, description, url } = Astro.props;
---

<div class="min-w-full flex flex-col items-center py-2">
  <div>
    <h3 class="text-xl text-yellow-400">{title}</h3>
  </div>
  <img src={image} alt="js" class="w-full md:w-3/4 my-2 mx-auto" />
  <p class="text-sm font-thin text-center text-white px-4">{description}</p>
  <Button name="Certificado" svg="/icons/link.svg" url={url} />
</div>

